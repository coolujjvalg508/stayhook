<div class="main-section" id="top-scroll-head"> 
    <!-- Banner Start -->
    <section class="about-banner">
        <div class="container">
            <center>
            <%= link_to ('<img src="/assets/about-logo.png" class="img-responsive" alt="StayHook">').html_safe, root_path %>
            </center>
            <div class="down-aros text-center">
                <a href="#a" onClick="return false" class="scroll">
                    <i class="arrow-down"><img src="/assets/down-arrow.png" alt=""></i>
                </a>
            </div>
        </div>
    </section>

    <!-- Container Start -->
    <section class="aboutwrap clearfix" id="a">
        <div class="container">
            <div class="about-box clearfix">
                <h2>About Us</h2>
                <% if @aboutpage_detail.content.present? %>
                    <%= @aboutpage_detail.content.html_safe %>
                <% end %>
                
            </div>
        </div>
    </section>
</div>

