<!--Login page start-->
<% #if !user_signed_in? %>
<div class="modal fade login" id="login" role="dialog">
    <div class="modal-dialog">
        <div class="login-secton">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h5 class="box-titl">Sign In</h5>
             <div class="col-md-12 signin-alert err-msg padding text-center"></div>
            <%= form_for(resource, :as => resource_name, :html => {:id => 'log_in_form_popup'}, :url => user_session_path, :remote => :true, :format => :json) do |f| %>
                <div class="form-group">
                    <label>Your Email ID</label>
                    <%= f.email_field :email, :autofocus => true, :placeholder => "email", :id => 'login_email', class:"form-control", :type => 'email' %>
                </div>
                <div class="form-group">
                    <label>Password</label>
                  
                    <%= f.password_field :password, :placeholder => "password", :id => 'login_password', class:"form-control" %>
                </div>
                <div class="form-group"> 
                    <span class="remb">
                    <%= f.check_box :remember_me %>
               
                        <b>Keep me signed in <a href="#" class="pull-right">Forgot Password</a></b> 
                    </span> 
                </div>
                <div class="form-group">
                <%= f.submit "Sign In", class: "submit-button" %>
                   
                </div>
                <% end %>
                <div class="or-section"> 
                    <b>OR</b> 
                </div>
                <a href="#" class="otp">Login with OTP</a>
        </div>
        <div class="sibn-up"> 
            Not Registered? 
            <a href="#" onClick="return false" data-toggle="modal" data-target="#register" data-dismiss="modal">Sign Up</a> 
        </div>
    </div>
</div>

<% #end %>   

<!--Login page end--> 

<!--Register page start-->
<div class="modal fade" id="register" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="login-secton">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h5 class="box-titl">Create Account</h5>
            <%= form_for(resource, :as => resource_name, :html => {:id => 'signup_form_popup'}, :url => user_registration_path(resource_name), :remote => :true, :format => :json) do |f| %>


                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>FULLname</label>
                            <%= f.text_field :first_name, :autofocus => true, :placeholder => "Tom", :id => 'login_name', class:"form-control", :type => 'text' %>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Your E-mail</label>
                            <%= f.email_field :email, :autofocus => true, :placeholder => "name@mail.com", :id => 'login_email', class:"form-control", :type => 'email' %>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>MOBILE NUMBER</label>
                            <%= f.text_field :phone_number, :autofocus => true, :placeholder => "9871234560", :id => 'login_mobile', class:"form-control", :type => 'text' %>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Create Password</label>
                            <%= f.password_field :password, :autofocus => true, :id => 'login_password', class:"form-control", :type => 'password' %>
                        </div>
                    </div>
                </div>
                <p class="terms-cond">By signing up you agree our <a href="#">Terms</a> and <a href="#">Privacy Policy</a></p>
                <div class="form-group fix-width-button">
                 <%= f.submit "Sign up", class: "submit-button" %>
                    
                </div>
                <div class="or-section">
                    <b>OR</b> 
                </div>
                <div class="back-to-login">
                    <i>Already have a StayHook account?</i>
                    <a href="#" onClick="return false" data-toggle="modal" data-target="#login" data-dismiss="modal" class="otp">Log In</a> 
                </div>
            <% end %>
        </div>
    </div>
</div>
<!--Register page end--> 

