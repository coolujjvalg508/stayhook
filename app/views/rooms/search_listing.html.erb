                            <div class="chekd-dtals">
                                <label>Check -out</label>
                                <input class="form-control" type="text" placeholder="16/12/2016">
                            </div>
                            <div class="chekd-dtals chekc">
                                <label>&nbsp;</label>
                                <div class="pri-sha">
                                    <div class="perbox sear-hot-radio clearfix">
                                        <input class="magic-radio" type="radio" name="radio" id="3" value="option1" >
                                        <label for="3"> Private </label>
                                    </div>
                                    <div class="shaved-dp">
                                        <div class="shared-btn">SHARED</div>
                                        <ul class="show-ulcont">
                                            <li>
                                                <div class="perbox sear-hot-radio clearfix">
                                                    <input class="magic-radio" type="radio" name="radio-1" id="2set" value="option1" checked>
                                                    <label for="2set"> 2 Seater </label>
                                                </div>
                                            </li>
                                            <li>
                                                <div class="perbox sear-hot-radio clearfix">
