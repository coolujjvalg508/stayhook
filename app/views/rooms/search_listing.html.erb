        var filterList = {
            init: function () {
                // MixItUp plugin
                // http://mixitup.io
                $('#portfoliolist').mixItUp({
                selectors: {
                  target: '.portfolio',
                  filter: '.filter'	
              },
              load: {
              filter: '.recent, .popular, .highest, .lowest'  
            }     
                });								
            }
        };
        // Run the show!
        filterList.init();
		
		$('.show-filter').on('click',function(){
		$('#flux').scrollTop(0);
		})
    });	
	
	
